{
	"name": "voxel-heim",
	"version": "0.0.0",
	"private": true,
	"workspaces": ["apps/frontend/*", "apps/backend/*"],
	"scripts": {
		"dev:frontend:game": "bun run --cwd apps/frontend/game dev",
		"build:frontend:game": "bun run --cwd apps/frontend/game build",
		"start:frontend:game": "bun run --cwd apps/frontend/game preview",
		"dev:backend:auth": "cd apps/backend/authorization && encore run",
		"dev:backend:game": "cd apps/backend/game && encore run",
		"dev:backend:analytics": "cd apps/backend/analytics && encore run",
		"test:backend:auth": "cd apps/backend/authorization && encore test",
		"test:backend:game": "cd apps/backend/game && encore test",
		"test:backend:analytics": "cd apps/backend/analytics && encore test",
		"build:backend:auth": "cd apps/backend/authorization && encore build",
		"build:backend:game": "cd apps/backend/game && encore build",
		"build:backend:analytics": "cd apps/backend/analytics && encore build",
		"prepare": "husky",
		"lint": "biome lint",
		"install:all": "bun install && bun install --cwd apps/backend/authorization"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@commitlint/cli": "^19.5.0",
		"@commitlint/config-conventional": "^19.5.0",
		"husky": "^9.1.6"
	}
}
